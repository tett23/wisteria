{
  "name": "wisteria",
  "version": "0.0.0",
  "license": "MIT",
  "main": "main/electron-src/index.js",
  "scripts": {
    "clean": "rimraf dist main renderer/out renderer/.next",
    "dev": "npm run build-electron && npm run build-workers && electron .",
    "build-renderer": "next build renderer && next export renderer",
    "build-electron": "tsc -p electron-src",
    "build": "npm run build-renderer && npm run build-electron && npm run build-workers",
    "build-workers": "yarn run build-workers:pageMetrics && yarn run build-workers:sample",
    "build-workers:pageMetrics": "yarn run esbuild ./workers/pageMetrics --bundle --format=cjs --outfile=main/workers/pageMetrics/index.js",
    "build-workers:sample": "yarn run esbuild ./workers/sample --bundle --format=cjs --outfile=main/workers/index.js",
    "pack-app:x64-mac": "npm run build && electron-builder --dir --mac --x64",
    "dist": "npm run build && electron-builder",
    "type-check": "tsc",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "electron-is-dev": "^1.1.0",
    "electron-next": "^3.1.5",
    "promise-worker": "^2.0.1",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-hotkeys-hook": "^3.3.1",
    "tailwindcss": "^2.0.1",
    "use-debounce": "^6.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-react": "^7.12.7",
    "@babel/preset-typescript": "^7.12.7",
    "@fortawesome/fontawesome-svg-core": "^1.2.32",
    "@fortawesome/free-regular-svg-icons": "^5.15.1",
    "@fortawesome/free-solid-svg-icons": "^5.15.1",
    "@fortawesome/react-fontawesome": "^0.1.13",
    "@storybook/addon-actions": "^6.1.8",
    "@storybook/addon-essentials": "^6.1.8",
    "@storybook/addon-links": "^6.1.8",
    "@storybook/react": "^6.1.8",
    "@types/jest": "^26.0.23",
    "@types/node": "^14.14.6",
    "@types/react": "^16.9.9",
    "@types/react-dom": "^16.9.9",
    "autoprefixer": "^10.0.4",
    "babel-loader": "^8.2.2",
    "babel-plugin-module-resolver": "^4.0.0",
    "css-loader": "^5.0.1",
    "electron": "^10.1.5",
    "electron-builder": "^22.9.1",
    "electron-devtools-installer": "^3.1.1",
    "esbuild": "^0.12.1",
    "esbuild-jest": "^0.5.0",
    "jest": "^26.6.3",
    "next": "^10.2.0",
    "postcss": "^8.1.7",
    "postcss-loader": "^4.1.0",
    "recoil": "^0.2.0",
    "rimraf": "^3.0.0",
    "style-loader": "^2.0.0",
    "typescript": "^4.0.5"
  },
  "resolutions": {
    "autoprefixer": "10.0.4",
    "postcss": "8.1.7",
    "postcss-loader": "4.1.0"
  },
  "build": {
    "asar": true,
    "files": [
      "main",
      "renderer/out"
    ]
  }
}
